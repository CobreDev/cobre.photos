<div>
  {% include "_back.liquid" %}

  <div class="flex justify-center items-center my-2">
    <h1>All Events</h1>
  </div>
</div>

<div class="flex flex-col space-y-4">
  {% for group in galleries.eventsByMonth %}
    <div class="space-y-2">
      <h2>
        {% assign monthDate = group.items[0].date.start | default: group.items[0].date %}
        {{ monthDate | date: "%B %Y" }}
      </h2>

      <div>
        {% for event in group.items %}
          <div class="flex flex-row justify-between">
            <div class="flex flex-row gap-x-4">
              <a href="{{ event.path }}">
                <span class="hidden xl:inline">{{ event.title }}</span>
                <span class="inline xl:hidden">{{ event.short_title }}</span>
              </a>
              <p class="text-zinc-400 lg:block hidden">
                {% if event.date.start %}
                  {% assign start_date = event.date.start | utcDate: "MMMM dd" %}
                  {% assign end_date = event.date.end | utcDate: "dd" %}
                  {% assign year = event.date.start | utcDate: ", yyyy" %}
                  {{ start_date }} â€” {{ end_date }}{{ year }}
                {% else %}
                  {{ event.date | utcDate: "MMMM dd, yyyy" }}

                {% endif %}
              </p>
            </div>
            <p class="text-zinc-400">{{ event.location }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>